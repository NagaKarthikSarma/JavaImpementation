package com.karthik.core.collections.file;

import java.io.File;
import java.io.IOException;

public class FileCreation {
	public static void main(String[] args) throws IOException {
		
		File directory = new File("/src/karthik");
		
		directory.mkdir();
		File file = new File("src/karthik.txt");

file.createNewFile();// creating a file
//it shows exception so we are throwing exception
System.out.println("file created");
 
		
		
	}
}

